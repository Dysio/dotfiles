[include]
	# user configuration
	path = ~/.gitid

[alias]
        a = add
        c = commit
        com = checkout main
        d = diff
        p = push
        s = status --short

[core]
	editor = vim

	excludesfile = ~/.gitignore_global

	autocrlf = input

[pull]
	ff = only

[color "status"]
    added = green 
    changed = blue
    untracked = red
